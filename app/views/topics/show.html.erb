<div>
  <div>
    <h1>
      Topic #<%= @the_topic.id %> details
    </h1>

    <div>
      <div>
        <a href="/topics">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_topic/<%= @the_topic.id %>">
          Delete topic
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_topic.name %>
      </dd>

      <dt>
        Instructor
      </dt>
      <dd>
        <%= @the_topic.instructor_id %>
      </dd>

      <dt>
        Isactive
      </dt>
      <dd>
        <%= @the_topic.isactive %>
      </dd>

      <dt>
        Enrollments count
      </dt>
      <dd>
        <%= @the_topic.enrollments_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_topic.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_topic.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit topic
    </h2>

    <form action="/modify_topic/<%= @the_topic.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_topic.name %>">
      </div>

      <div>
        <label for="instructor_id_box">
          Instructor
        </label>

        <input type="text" id="instructor_id_box" name="query_instructor_id" value="<%= @the_topic.instructor_id %>">
      </div>

      <div>
        <input type="checkbox" id="isactive_box" name="query_isactive" value="1" <%= "checked" if @the_topic.isactive %>>

        <label for="isactive_box">
            Isactive
        </label>
      </div>

      <div>
        <label for="enrollments_count_box">
          Enrollments count
        </label>

        <input type="text" id="enrollments_count_box" name="query_enrollments_count" value="<%= @the_topic.enrollments_count %>">
      </div>

      <button>
        Update topic
      </button>
    </form>
  </div>
</div>

<hr>
