<div>
  <div>
    <h1>
      List of all topics
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new topic
    </h2>

    <form action="/insert_topic" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="instructor_id_box">
          Instructor
        </label>

        <input type="text" id="instructor_id_box" name="query_instructor_id">
      </div>

      <div>
        <input type="checkbox" id="isactive_box" name="query_isactive" value="1">

        <label for="isactive_box">Isactive</label>
      </div>

      <div>
        <label for="enrollments_count_box">
          Enrollments count
        </label>

        <input type="text" id="enrollments_count_box" name="query_enrollments_count">
      </div>

      <button>
        Create topic
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Instructor
        </th>

        <th>
          Isactive
        </th>

        <th>
          Enrollments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_topics.each do |a_topic| %>
      <tr>
        <td>
          <%= a_topic.id %>
        </td>

        <td>
          <%= a_topic.name %>
        </td>

        <td>
          <%= a_topic.instructor_id %>
        </td>

        <td>
          <%= a_topic.isactive %>
        </td>

        <td>
          <%= a_topic.enrollments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_topic.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_topic.updated_at) %> ago
        </td>

        <td>
          <a href="/topics/<%= a_topic.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
