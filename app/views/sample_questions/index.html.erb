<h1>List of all sample questions</h1>

<hr>

<div>
  <h2>Add a new sample question</h2>

  <form action="/insert_sample_question" method="post">
    <div>
      <label for="question_body_box">Question body</label>
      <textarea id="question_body_box" name="query_question_body" rows="3"></textarea>
    </div>

    <div>
      <label for="topic_id_box">Topic</label>
      <input type="text" id="topic_id_box" name="query_topic_id">
    </div>

    <button>Create sample question</button>
  </form>
</div>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Question body</th>
    <th>Topic</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th></th>
  </tr>

  <% @list_of_sample_questions.each do |a_sample_question| %>
  <tr>
    <td><%= a_sample_question.id %></td>
    <td><%= a_sample_question.question_body %></td>
    <td><%= a_sample_question.topic_id %></td>
    <td><%= time_ago_in_words(a_sample_question.created_at) %> ago</td>
    <td><%= time_ago_in_words(a_sample_question.updated_at) %> ago</td>
    <td><a href="/sample_questions/<%= a_sample_question.id %>">Show details</a></td>
  </tr>
  <% end %>
</table>

<hr>
