<h1>List of all documents</h1>

<hr>

<div>
  <h2>Add a new document</h2>

  <form action="/insert_document" method="post">
    <div>
      <label for="topic_id_box">Topic</label>
      <input type="text" id="topic_id_box" name="query_topic_id">
    </div>

    <button>Create document</button>
  </form>
</div>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Topic</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th></th>
  </tr>

  <% @list_of_documents.each do |a_document| %>
  <tr>
    <td><%= a_document.id %></td>
    <td><%= a_document.topic_id %></td>
    <td><%= time_ago_in_words(a_document.created_at) %> ago</td>
    <td><%= time_ago_in_words(a_document.updated_at) %> ago</td>
    <td><a href="/documents/<%= a_document.id %>">Show details</a></td>
  </tr>
  <% end %>
</table>

<hr>
