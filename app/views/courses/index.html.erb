<h1>List of all courses</h1>

<hr>

<div>
  <h2>Add a new course</h2>

  <form action="/insert_course" method="post">
    <div>
      <label for="name_box">Name</label>
      <input type="text" id="name_box" name="query_name">
    </div>

    <div>
      <label for="instructor_id_box">Instructor</label>
      <input type="text" id="instructor_id_box" name="query_instructor_id">
    </div>

    <div>
      <input type="checkbox" id="isactive_box" name="query_isactive" value="1">
      <label for="isactive_box">Isactive</label>
    </div>

    <button>Create course</button>
  </form>
</div>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Instructor</th>
    <th>Isactive</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th></th>
  </tr>

  <% @list_of_courses.each do |a_course| %>
  <tr>
    <td><%= a_course.id %></td>
    <td><%= a_course.name %></td>
    <td><%= a_course.instructor_id %></td>
    <td><%= a_course.isactive %></td>
    <td><%= time_ago_in_words(a_course.created_at) %> ago</td>
    <td><%= time_ago_in_words(a_course.updated_at) %> ago</td>
    <td><a href="/courses/<%= a_course.id %>">Show details</a></td>
  </tr>
  <% end %>
</table>

<hr>
